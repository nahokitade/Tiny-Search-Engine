aN(num))num = "0";sign = (num == (num = Math.abs(num)));num = Math.floor(num*100+0.50000000001);cents = num%100;num = Math.floor(num/100).toString();if(cents<10)cents = "0" + cents;for (var i = 0; i < Math.floor((num.length-(1+i))/3); i++)num = num.substring(0,num.length-(4*i+3))+','+num.substring(num.length-(4*i+3));return (((sign)?'':'-') + '$' + num + '.' + cents);}function CheckVals(checkout){var dir = 'http://papers.ssrn.com/sol3/ShoppingCart.cfm?funct=add';if (!checkinteger(document.form1.txtQuantity.value)){alert("Illegal character. Must be an integer.");return false;}if (document.form1.txtQuantity.value.length < 1){alert("Please enter the quantity of papers you would like to purchase!");return false;}else if (document.form1.txtQuantity.value < 1){alert("You have to enter a number greater then 0 for the quantity!");return false;}calcTotal();dir+='&txtQuantity=' + document.form1.txtQuantity.valuedir+='&txtTotalPrice=' + document.form1.txtTotalPrice.value;dir+='&txtAbID=1686004';if (checkout && checkout == 'yes') {dir+='&checkout=yes';}document.location.href=dir;}function switchMirror ( mirror ) {showBar(mirror);setTimeout("hideBar(" + mirror + ")", 8000 );// hide the rest of the progress barsfor (i=1; document.getElementById('processingMessage'+i);i++) {if (i != mirror) hideBar(i);}}
