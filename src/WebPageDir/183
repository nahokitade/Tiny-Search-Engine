<script language="JavaScript">
var beforeload = (new Date()).getTime();
var totalTime = 0;
var clientTime = 0;
var serverTime = 0;
var XmlHttpObj1;
function Sign(X) { return X>0 ? "+" : X<0 ? "-" : " " }
function CreateXmlHttpObj1() {
	try {XmlHttpObj1 = new ActiveXObject("Msxml2.XMLHTTP");}
	catch(e) {try{XmlHttpObj1 = new ActiveXObject("Microsoft.XMLHTTP");}
		catch(oc) {XmlHttpObj1 = null;}}
	if(!XmlHttpObj1 && typeof XMLHttpRequest != "undefined") {XmlHttpObj1 = new XMLHttpRequest();}}

function updateTime() {
			var sQuery = "abstract_id=1686004";
			var sURL = "/sol3/papers.cfm";

			var sNameDom = "papers.ssrn.com";
			var sIP = "129.170.213.32";
			var sBrowser = "libcurl-agent/1.0";
			var sProtocol = location.protocol;
			var requestUrl = sProtocol+ "//"+sNameDom+"/AjaxStatic.cfm?file=updateLoadTime";

			var mydate= new Date();
			var sTZOffset = mydate.getTimezoneOffset()/60;
			var getSign = Sign(sTZOffset);

			if (getSign == '-') {sTZOffset = "GMT+ "+ Math.abs(sTZOffset)+":00";}
			else {if (getSign == '+') {sTZOffset = "GMT- "+ Math.abs(sTZOffset)+":00";}
				  else {sTZOffset = "GMT";}
			}

			CreateXmlHttpObj1();
			if(XmlHttpObj1) {
				XmlHttpObj1.open('POST',requestUrl,false);
				XmlHttpObj1.setRequestHeader('Content-Type','application/x-www-form-urlencoded');
				XmlHttpObj1.send("url1=" +encodeURIComponent(sURL)+ "&qry=" +encodeURIComponent(sQuery)+ "&ip=" +sIP+ "&zone=" +encodeURIComponent(sTZOffset)+ "&ua=" +encodeURIComponent(sBrowser)+ "&setime=" +serverTime+ "&totime=" +totalTime);

			}
}

function loadingTime() {
	//calculate the current time in afterload
	var afterload = (new Date()).getTime();
	//calculate the seconds
	clientTime = (afterload-beforeload)/1000;
	serverTime =  parseFloat(document.getElementById("serverTime").innerHTML);
	totalTime = (clientTime + serverTime).toFixed(3);
	document.getElementById("loadingtime").innerHTML = "and delivered in " + totalTime + " seconds";
	updateTime();
}
function addLoadEvent(func) {
  var oldonload = window.onload;
  if (typeof window.onload != 'function') {
    window.onload = func;
  } else {
    window.onload = function() {
      if (oldonload) {
        oldonload();
      }
      func();
    }
  }
}
</script>









	
	
	
	
	
	
		
			
			
		

		
		
	

	

	



	
	
	
	

