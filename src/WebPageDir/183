        ///////////////////////////////////////////////////////////////////////////////////
        // Check if fieldValue is Integer												 //
        ///////////////////////////////////////////////////////////////////////////////////
        //-------------------------------------------------------------------------------//
        var decimalpoint=".";
        function checkinteger(fieldValue)
        {
            if (fieldValue.length > 0){
                if (isNaN(fieldValue) || fieldValue == ""){
                    return false;
                }else{
                    if (fieldValue.indexOf(decimalpoint) > -1){
                        return false;
                    }else{return true;}
                }
            }else{return true;}
        }
