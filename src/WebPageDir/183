	var XmlHttpObj;

	function CreateXmlHttpObj() {
	// try creating for IE (note: we don't know the user's browser type here, just attempting IE first.)
		try {XmlHttpObj = new ActiveXObject("Msxml2.XMLHTTP");}
		catch(e) {
			try {XmlHttpObj = new ActiveXObject("Microsoft.XMLHTTP");}
			catch(oc){ XmlHttpObj = null;}
		}
		// if unable to create using IE specific code then try creating for Mozilla (FireFox)
		if(!XmlHttpObj && typeof XMLHttpRequest != "undefined") {
			XmlHttpObj = new XMLHttpRequest();
		}
	}


	function openCaptcha() {
		var dt = new Date();
		var action;
		action = 1;

		var requestUrl;
		requestUrl = "ctCheckCaptchaStatus.cfm?id=" + encodeURIComponent(action) + "&dt=" + encodeURIComponent(dt);

		CreateXmlHttpObj();

		// verify XmlHttpObj variable was successfully initialized
		if(XmlHttpObj) {
			XmlHttpObj.onreadystatechange = StateChangeHandler;
			XmlHttpObj.open("GET", requestUrl, true);
			XmlHttpObj.send(null);
		}
	}

	function StateChangeHandler() {
		// state ==4 indicates receiving response data from server is completed
		if(XmlHttpObj.readyState == 4) {
			// To make sure valid response is received from the server, 200 means response received is OK
			if(XmlHttpObj.status == 200) {
				var srta = (XmlHttpObj.responseText).replace(/^\s+/g,'').replace(/\s+$/g,'');
				if ( srta == 'no'){
					if (document.getElementById('hardCopyLink')){
						document.getElementById('hardcopySection').style.display='none';
						document.getElementById('hardCopyLink').className = 'menuItems';
					}
                	document.getElementById('openShareLink').className = 'menuItems';
					if (document.getElementById('diggarea')) {
						document.getElementById('diggarea').style.display='none';
					}
					if (document.getElementById('captchaSection')){
		    	    	document.getElementById('captchaSection').style.display='block';
						document.getElementById('captchaSectionForm').style.display='block';
					}
					Recaptcha.focus_response_field();
				}
				else {
					clickDownloadLink();
				}
			}
		}
	}

	function closeCaptcha() {
		if (document.getElementById('captchaSectionForm')) {
			document.getElementById('captchaSectionForm').style.display='none';
		}
	}

	function clickDownloadLink() {
		closeCaptcha();
		if (bIE == "True"){
			document.getElementById('captchaLink').click();
		}
		else {
			$(document).ready(function(){
			     $("#captchaLink").click(function(){
		          window.location = ($(this).attr("href"));
			     }).trigger("click");
			});
		}
	}


	function verifyCaptcha() {
		var dt = new Date();
		sChallange = document.form1.recaptcha_challenge_field.value ;
		sResponse = document.form1.recaptcha_response_field.value ;

		var requestUrl;
		requestUrl = "ctVerifyCaptcha.cfm?challange=" + encodeURIComponent(sChallange) + "&response=" + encodeURIComponent(sResponse) + "&dt=" + encodeURIComponent(dt);

		CreateXmlHttpObj();

		// verify XmlHttpObj variable was successfully initialized
		if(XmlHttpObj) {
			XmlHttpObj.onreadystatechange = StateChangeHandler1;
			XmlHttpObj.open("GET", requestUrl, true);
			XmlHttpObj.send(null);
		}
	}

	function StateChangeHandler1() {
		// state ==4 indicates receiving response data from server is completed
		if(XmlHttpObj.readyState == 4) {
			// To make sure valid response is received from the server, 200 means response received is OK
			if(XmlHttpObj.status == 200) {
				var srta = (XmlHttpObj.responseText).replace(/^\s+/g,'').replace(/\s+$/g,'');
				if ( srta == 'true'){
					clickDownloadLink();
				}
				else {
					Recaptcha.reload();
				}
			}
		}
	}
    </script>

