            if (document.getElementById('hardcopySection').style.display=='none') {
                document.getElementById('hardcopySection').style.display='block';
                document.getElementById('diggarea').style.display='none';
				document.getElementById('downloadFullText').style.display='none';
                document.getElementById('hardCopyLink').className = 'menuItemsDownloadOpened';
				if (document.getElementById('openDownloadLink')){
					document.getElementById('openDownloadLink').className =	'menuItems';
				}
                document.getElementById('openShareLink').className = 'menuItems';
				if (document.getElementById('captchaSectionForm')) {
					document.getElementById('captchaSectionForm').style.display='none';
				}
